#headNav-wraper
  height 130px
  background #F1F1F1
  &.headerscroll
    position fixed
    top 0
    left 0
    width 100%
    background #F1F1F1
    z-index 10000
  .typeArea-head
    background #F1F1F1
    font-size 16px
    font-weight bold
    height 40px
    display flex
    justify-content space-between
    line-height 40px
    .navLeft
      &:hover
        background white
      .toggle
        color dimgray
    .navRight
      ul
        display flex
        li
          &:hover
            background white
          a
            padding 0 15px
            color #333
            transition color 1s
            &:hover
              color #E72B2F
    .active
      color darkred
  // 头部logo和search区域
  .logoSearchWrap
    background white
    height 90px
    .leftSection
      width 280px
      height 90px
      float left
      a
        height 90px
        line-height 90px
        box-sizing border-box
        padding 25px 0
      img
        width 100%
        vertical-align middle
    .middleSection
      position relative
      float left
      margin 28px 46px
      input
        width 417px
        height 30px
        border 2px solid #E72B2F
        padding 2px 30px
        border-radius 10px
      .search
        position absolute
        top 0
        right 0
        width 120px
        height 36px
        background #E72B2F
        border-radius 0 10px 10px 0
        color white
        text-align center
        line-height 36px
        font-size 16px
    .rightSection
      position relative
      float right
      width 90px
      height 90px
      border 1px solid #ccc
      img
        position absolute
        top 0
        width 100%
        z-index 100
      span
        display block
        border 1px solid #ccc
        width 12px
        height 12px
        position absolute
        top -5px
        left 40px
        background #fff
        -webkit-transform rotate(45deg)
        box-sizing border-box
#main-wraper
  background #fbf8f8
  width 100%
  .listContainer
    h3
      height 85px
      width 100px
      box-sizing border-box
      padding 20px 0
    .typeArea
      position: relative
      .leftSection
        width 970px
        ul
          li
            float left
            border 1px solid #eee
            box-sizing border-box
            padding 10px
            width 232px
            height 300px
            h4
              font-size 16px
              padding 5px
            span
              display: block
              float left
            img
              width 210px
              height 210px

      .banner
        position absolute
        top 0
        right 0
        width 230px
        height 298px
        img
          width 100%
